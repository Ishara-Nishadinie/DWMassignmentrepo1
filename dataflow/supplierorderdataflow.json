{
	"name": "supplierorderdataflow",
	"properties": {
		"type": "MappingDataFlow",
		"typeProperties": {
			"sources": [
				{
					"dataset": {
						"referenceName": "AzureSqlSinkTableSuliper",
						"type": "DatasetReference"
					},
					"name": "supplier"
				},
				{
					"dataset": {
						"referenceName": "AzureSqlTableOrderFact",
						"type": "DatasetReference"
					},
					"name": "orderdata"
				}
			],
			"sinks": [],
			"transformations": [
				{
					"name": "joinOrderSupplier"
				},
				{
					"name": "selectColumns"
				}
			],
			"scriptLines": [
				"source(output(",
				"          Supplier_SK as integer,",
				"          Supplier_Code as string,",
				"          Name as string,",
				"          Region as string,",
				"          Country as string,",
				"          Type as string",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: true,",
				"     inferDriftedColumnTypes: true,",
				"     limit: 20,",
				"     isolationLevel: 'READ_UNCOMMITTED',",
				"     format: 'table') ~> supplier",
				"source(output(",
				"          Order_Id as string,",
				"          Quantity as integer,",
				"          Unit_Cost as decimal(10,2),",
				"          Product_ID as string,",
				"          Customer_ID as string,",
				"          Supplier_ID as string,",
				"          Status as string,",
				"          Order_Date as string",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     limit: 20,",
				"     isolationLevel: 'READ_UNCOMMITTED',",
				"     format: 'table') ~> orderdata",
				"orderdata, supplier join(Supplier_ID == Supplier_Code,",
				"     joinType:'inner',",
				"     matchType:'exact',",
				"     ignoreSpaces: false,",
				"     broadcast: 'auto')~> joinOrderSupplier",
				"joinOrderSupplier select(mapColumn(",
				"          Order_Id,",
				"          Quantity,",
				"          Unit_Cost,",
				"          Product_ID,",
				"          Customer_ID,",
				"          Supplier_ID,",
				"          Status,",
				"          Order_Date,",
				"          Supplier_SK,",
				"          Supplier_Code,",
				"          Name,",
				"          Region,",
				"          Country,",
				"          Type",
				"     ),",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true) ~> selectColumns"
			]
		}
	}
}